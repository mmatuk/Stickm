<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="3dip" />
            <gradient
                    android:startColor="#dd260000"
                    android:centerColor="#dd4d0000"
                    android:centerY="0.75"
                    android:endColor="#dd260000"
                    android:angle="270"
            />
        </shape>
    </item> 

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="3dip" />
                <gradient
                        android:startColor="#800000"
                        android:centerColor="#b20000"
                        android:centerY=".2"
                        android:endColor="#800000"
                        android:angle="270"
                />
            </shape>
        </clip>
    </item>

</layer-list>